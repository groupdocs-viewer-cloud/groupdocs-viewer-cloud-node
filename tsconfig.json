{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES6",
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": false,
        "noLib": false,
        "declaration": true,
        "lib": [
            "es5",
            "es6",
            "scripthost"
        ],
        "outDir": "lib"
    },
    "include": [
        "src/**/*"
    ]
}